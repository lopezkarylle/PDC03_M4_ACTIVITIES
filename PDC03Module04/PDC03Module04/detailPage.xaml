<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC03Module04.detailPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            
            <StackLayout Orientation="Horizontal">
                <Label Text="Name: " FontSize="Medium" FontAttributes="Bold"/>
                <Label Text="{Binding FullName}" FontSize="Medium"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="Age: " FontSize="Medium" FontAttributes="Bold"/>
                <Label Text="{Binding Age}" FontSize="Medium"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="Occupation:" FontSize="Medium" FontAttributes="Bold"/>
                <Label Text="{Binding Occupation}" FontSize="Medium"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="Country:" FontSize="Medium" FontAttributes="Bold"/>
                <Label Text="{Binding Country}" FontSize="Medium"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>